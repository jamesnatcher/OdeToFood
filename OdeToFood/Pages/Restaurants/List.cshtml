@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurant</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-text">

                <button class="btn btn-dark">
                    <i class="icon"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <tr">
        <td>
            Name
        </td>
        <td>
            Location
        </td>
        <td>
            Cuisine
        </td>
        <td>
        </td>
    </tr>
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @restaurant.Name
            </td>
            <td>
                @restaurant.Location
            </td>
            <td>
                @restaurant.Cuisine
            </td>
            <td>
                @{
                    var link = "/Restaurants/Detail/" + restaurant.Id;
                }
                <a class="btn btn-secondary"
                    href=@link>
                Go To</a>
            </td>
        </tr>
    }
</table>
<div>
    @Model.Message

    @Model.MessageConfig
</div>